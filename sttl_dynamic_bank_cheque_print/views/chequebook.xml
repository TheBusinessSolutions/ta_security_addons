<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_cheque_book_form" model="ir.ui.view">
        <field name="name">cheque.book.form</field>
        <field name="model">cheque.book</field>
        <field name="arch" type="xml">
            <form string="Cheque Book">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bank_id"/>
                            <field name="is_total_leaves_read_only" invisible="1"/>
                            <field name="total_leaves" readonly="is_total_leaves_read_only"/>
                            <field name="account_number"/>
                        </group>
                        <group>
                            <group string="Cheque Numbers">
                                <field name="is_from_date_readonly" invisible="1"/>
                                <field name="is_to_date_readonly" invisible="1"/>

                                <field name="cheque_from" readonly="is_from_date_readonly"/>
                                <field name="cheque_to" readonly="1"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Issued Cheque History">
                            <field name="cheque_leaf_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="number"/>
                                    <field name="payee_name"/>
                                    <field name="is_used"/>
                                    <field name="amount"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bank_cheque_tree" model="ir.ui.view">
        <field name="name">bank.cheque.tree</field>
        <field name="model">cheque.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="total_leaves"/>
                <field name="cheque_from"/>
                <field name="cheque_to"/>
            </tree>
        </field>
    </record>

    <record id="action_chequebook" model="ir.actions.act_window">
        <field name="name">Bank Chequebook</field>
        <field name="res_model">cheque.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_chequebook"
              name="Bank Chequebook"
              parent="menu_bank_cheque_root"
              action="action_chequebook"/>
</odoo>
