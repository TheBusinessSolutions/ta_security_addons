<odoo>
    <data>
        <record id="views_account_payment_form_cheque_button" model="ir.ui.view">
            <field name="name">account.payment.form.advance.cheque</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="payment_method_name" invisible="1"/>
                    <button name="action_open_cheque_wizard"
                            string="Advance Print Cheque"
                            type="object"
                            class="btn-primary"
                            invisible="payment_type == 'inbound' or payment_method_name == 'Manual'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
