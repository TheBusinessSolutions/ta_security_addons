<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_form_inherit_display_price" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit.display.price.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <!-- Sale Price: visible only if NOT in Hide Sale Price group -->
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="groups">base.group_user,!hide_product_price.group_hide_sale_price</attribute>
                </xpath>

                <!-- Cost Price: visible only if NOT in Hide Cost Price group -->
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">base.group_user,!hide_product_price.group_hide_cost_price</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>