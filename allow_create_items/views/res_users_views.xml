<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_product_access" model="ir.ui.view">
        <field name="name">res.users.form.inherit.product.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Inventory Permissions">
                    <field name="allow_product_template_create" 
                           attrs="{'invisible': [('share', '=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
