<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Loan Sequence -->
        <record id="seq_hr_loan" model="ir.sequence">
            <field name="name">Loan Sequence</field>
            <field name="code">hr.loan.seq</field>
            <field name="prefix">LO/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Loan Payment Sequence -->
        <record id="seq_hr_loan_payment" model="ir.sequence">
            <field name="name">Loan Payment Sequence</field>
            <field name="code">hr.loan.payment</field>
            <field name="prefix">LP/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>