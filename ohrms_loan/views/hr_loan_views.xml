<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Loan Tree View -->
    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Requests" 
                  decoration-info="state=='draft'" 
                  decoration-muted="state in ('cancel','refuse')" 
                  decoration-success="state in ('approve', 'closed')"
                  decoration-warning="state=='waiting_approval_1'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="loan_amount" sum="Total Loan Amount"/>
                <field name="total_paid_amount" sum="Total Paid"/>
                <field name="balance_amount" sum="Total Balance" 
                       decoration-danger="balance_amount > 0 and state == 'approve'"
                       decoration-success="balance_amount == 0"/>
                <field name="installment"/>
                <field name="state" 
                       widget="badge" 
                       decoration-success="state in ('approve', 'closed')"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'waiting_approval_1'"
                       decoration-danger="state == 'refuse'"
                       decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Loan Form View -->
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                    <button name="action_submit" 
                            string="Submit" 
                            type="object" 
                            states="draft" 
                            class="oe_highlight"/>
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            states="waiting_approval_1" 
                            class="oe_highlight" 
                            groups="hr.group_hr_manager"/>
                    <button name="action_refuse" 
                            string="Refuse" 
                            type="object" 
                            states="waiting_approval_1" 
                            groups="hr.group_hr_manager"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object" 
                            states="draft,waiting_approval_1,approve"
                            confirm="Are you sure you want to cancel this loan? This will reverse the accounting entry if no payments have been made."/>
                    <button name="action_set_to_draft" 
                            string="Set to Draft" 
                            type="object" 
                            states="cancel,refuse"/>
                    <button name="action_register_payment" 
                            string="Register Payment" 
                            type="object" 
                            states="approve" 
                            class="btn-primary"
                            attrs="{'invisible': [('balance_amount', '&lt;=', 0)]}"/>
                    <field name="state" 
                           widget="statusbar" 
                           statusbar_visible="draft,waiting_approval_1,approve"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" 
                                type="object" 
                                name="toggle_active"
                                icon="fa-archive"
                                attrs="{'invisible': [('move_id', '=', False)]}">
                            <field name="move_id" widget="statinfo" string="Disbursement"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="employee_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date"/>
                            <field name="department_id"/>
                            <field name="job_position"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="loan_amount" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="installment" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_date" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Accounting Configuration">
                        <group>
                            <field name="loan_account_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"/>
                            <field name="treasury_account_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="journal_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group string="Loan Summary">
                        <group>
                            <field name="total_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="payslip_paid_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="direct_paid_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="total_paid_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="balance_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"
                                   class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Installments">
                            <button name="action_compute_installment" 
                                    string="Compute Installments" 
                                    type="object" 
                                    class="oe_highlight"
                                    attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <field name="loan_lines">
                                <tree string="Installments" 
                                      decoration-success="paid == True"
                                      editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="paid" readonly="1"/>
                                    <field name="payslip_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Direct Payments">
                            <field name="payment_lines">
                                <tree string="Payments" 
                                      decoration-success="state == 'posted'"
                                      decoration-muted="state == 'cancel'">
                                    <field name="name"/>
                                    <field name="payment_date"/>
                                    <field name="amount"/>
                                    <field name="journal_id"/>
                                    <field name="payment_account_id"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_post" 
                                            string="Post" 
                                            type="object" 
                                            states="draft"
                                            class="btn-primary"/>
                                    <button name="action_cancel" 
                                            string="Cancel" 
                                            type="object" 
                                            states="posted"
                                            confirm="Are you sure?"/>
                                </tree>
                                <form string="Payment">
                                    <header>
                                        <button name="action_post" 
                                                string="Post" 
                                                type="object" 
                                                states="draft"
                                                class="oe_highlight"/>
                                        <button name="action_cancel" 
                                                string="Cancel" 
                                                type="object" 
                                                states="posted"/>
                                        <field name="state" widget="statusbar"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name" readonly="1"/>
                                                <field name="employee_id" readonly="1"/>
                                                <field name="loan_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="payment_date"/>
                                                <field name="amount"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="journal_id"/>
                                                <field name="payment_account_id"/>
                                            </group>
                                            <group>
                                                <field name="move_id" readonly="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="notes"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Payment Wizard View -->
    <record id="hr_loan_payment_wizard_form" model="ir.ui.view">
        <field name="name">hr.loan.payment.wizard.form</field>
        <field name="model">hr.loan.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Loan Payment">
                <group>
                    <group>
                        <field name="loan_id" readonly="1"/>
                        <field name="employee_id" readonly="1"/>
                        <field name="payment_date"/>
                    </group>
                    <group>
                        <field name="amount"/>
                        <field name="journal_id"/>
                        <field name="payment_account_id"/>
                    </group>
                </group>
                <group>
                    <field name="notes" placeholder="Payment notes..."/>
                </group>
                <footer>
                    <button name="action_register_payment" 
                            string="Register Payment" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Loan Action -->
    <record id="action_hr_loan" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new loan request
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hr_loan_root"
              name="Loans"
              parent="hr.menu_hr_root"
              sequence="50"/>
              
    <menuitem id="menu_hr_loan_all"
              name="All Loans"
              parent="menu_hr_loan_root"
              action="action_hr_loan"
              sequence="1"/>
</odoo>