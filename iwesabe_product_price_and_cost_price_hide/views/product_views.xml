<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']" position="inside">
                    <field name="hide_price" invisible="1"/>
                    <field name="hide_cost" invisible="1"/>
                </xpath>
                <xpath expr="//label[@for='list_price']" position="attributes">
                    <attribute name="invisible">hide_price</attribute>
                </xpath>
                <xpath expr="//div[@name='pricing']" position="attributes">
                    <attribute name="invisible">hide_price</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="invisible">hide_cost or (product_variant_count &gt; 1 and not is_product_variant)</attribute>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="invisible">hide_cost or (product_variant_count &gt; 1 and not is_product_variant)</attribute>
                </xpath>
            </field>
        </record>






        <record id="product_template_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.template.product.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_variant_count']" position="after">
                    <field name="hide_price" column_invisible="1"/>
                    <field name="hide_cost" column_invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="column_invisible">hide_price</attribute>
                </xpath>

                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="column_invisible">hide_cost</attribute>
                </xpath>
            </field>
        </record>




        <record id="product_template_kanban_view_inherit" model="ir.ui.view">
            <field name="name">Product.template.product.kanban.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <field name="hide_price"/>
                </xpath>
                <xpath expr="//div[@name='product_lst_price']" position="attributes">
                    <attribute name="invisible">hide_price</attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>