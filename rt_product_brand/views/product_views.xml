<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="product_template_brand_search_view" model="ir.ui.view">
        <field name="name">product.template.brand.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <!-- <search string="Product">
                <field name="brand_id"/>
            </search> -->
            <xpath expr="//search" position="inside">
                <field name="brand_id"/>
            </xpath>
        </field>
</record>

    <record id="product_view_catalog_inherit_for_brand" model="ir.ui.view">
        <field name="name">product.product.catalog.search.view.inherited.for.brand</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_view_search_catalog"/>
        <field name="arch" type="xml">
            <xpath expr="//searchpanel/field[@name='categ_id']" position="after">
                <field name="brand_id"
                           string="Product Brand"
                           icon="fa-th-list"
                           enable_counters="1"/>
            </xpath>
        </field>
    </record>

</odoo>
