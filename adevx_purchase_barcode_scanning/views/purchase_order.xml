<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">view.inherit.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="before">
                    <div class="oe_title" groups="adevx_base_barcode_scanning.group_barcode_label_scan_type">
                        <h1>
                            <field name="barcode" placeholder="Scan Product Barcode or Code"
                                   readonly="state == 'done'"/>
                        </h1>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>