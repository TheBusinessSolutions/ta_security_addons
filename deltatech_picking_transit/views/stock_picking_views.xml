<!-- views/stock_picking_views.xml -->
<odoo>
    <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate']" position="before">
                <field name="is_transit_transfer" invisible="1" />
                <field name="sub_location_existent" invisible="1" />
                <field name="create_second_transfer_automatically" invisible="1" />
                <button
                    name="reassign_location"
                    type="object"
                    string="Reassign Location"
                    class="btn-primary"
                    invisible="sub_location_existent==False"
                />
                <button
                    name="open_transfer_wizard"
                    type="object"
                    string="Create Transfer"
                    class="btn-primary"
                    invisible="is_transit_transfer==False or origin!=False or create_second_transfer_automatically==True"
                />
            </xpath>
        </field>
    </record>
</odoo>
