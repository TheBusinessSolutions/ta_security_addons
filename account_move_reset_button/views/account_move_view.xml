<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.reset</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="replace">
                <button
                    name="button_draft"
                    string="Reset to Draft"
                    type="object"
                    invisible="not show_reset_to_draft_button"
                    data-hotkey="r"
                    groups="account_move_reset_button.hide_reset_draft_button_group"
                />
                <button
                    name="button_draft"
                    string="Reset to Draft"
                    type="object"
                    invisible="not show_reset_to_draft_button or '1'"
                    data-hotkey="r"
                    groups="!account_move_reset_button.hide_reset_draft_button_group"
                />
            </xpath>
        </field>
    </record>
</odoo>
