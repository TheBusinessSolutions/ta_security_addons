        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups" >sttl_journal_access_rights.sendto_draft_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']"
                    position="attributes">
                    <attribute name="groups" >sttl_journal_access_rights.reverse_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='action_post'][1]" position="attributes">
                    <attribute name="groups" >sttl_journal_access_rights.post_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='action_post'][2]" position="attributes">
                    <attribute name="groups">sttl_journal_access_rights.post_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][1]" position="attributes">
                    <attribute name="groups" >sttl_journal_access_rights.cancel_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <attribute name="groups" >sttl_journal_access_rights.cancel_journal_user_access</attribute>
                </xpath>

                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="groups">sttl_journal_access_rights.register_payment_journal_user_access</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="groups">sttl_journal_access_rights.register_payment_journal_user_access</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>