<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--
        We inherit the preference view product_category_form to add restricted_product_type field
        -->
        <record id="view_inherit_product_category_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="restricted_product_type" required="1"/>
                </field>
            </field>
        </record>

    </data>
</odoo>